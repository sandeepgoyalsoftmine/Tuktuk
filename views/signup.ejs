<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/html">

<head>
    <script type="text/javascript" src="../public/javascripts/jquery-1.12.0.min.js"></script>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <script type="text/javascript" src="../public/javascripts/user.js"></script>

    <% include partials/head.ejs%>
</head>
<body>

<div id="wrapper">
    <header>
        <%include ./partials/header.ejs%>
    </header>

    <div id="page-wrapper">
        <br/>

        <!-- InstanceBeginEditable name="ContentRegion" -->
        <div class="row">
            <div class="col-lg-12">
                <%if(access1==='true'){
                console.log("value of type  ", type1)%>
                <div class="panel panel-default">

                    <div class="panel-heading">
                        Sign Up
                        </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">

                                <div class="col-lg-12">
                                    <form id="form1"  role="form">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    <label>Name</label>
                                                    <input id="name" name="name" class="form-control">

                                                    </input>
                                                </div>
                                            </div>
                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    <label>Sex</label>
                                                    <select id="sex" name="sex" class="form-control">
                                                        <option>Select</option>
                                                        <option>Male</option>
                                                        <option>Female</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    <label>Age</label>
                                                    <input id="age" name="age" class="form-control">
                                                    </input>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    <label>Mobile Number</label>
                                                    <input id="mobile_number" name="mobile_number" class="form-control" type="tel" maxlength="10">

                                                    </input>
                                                </div>
                                            </div>
                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    <label>Email</label>
                                                    <input id="email" name="emailid" type="emailid" class="form-control">
                                                    </input>
                                                </div>
                                            </div>
                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    <label>Password</label>
                                                    <input id="password" name="password" type="password" class="form-control">

                                                    </input>
                                                </div>
                                            </div>
                                                                                    </div>

                                        <div  class="row">
                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    <label>Address</label>
                                                    <input id="city" name="city" class="form-control">

                                                    </input>
                                                </div>
                                            </div>
                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    <label>User Type</label>
                                                    <select id="user_type" name="user_type" class="form-control" onchange="setFields()">
                                                        <option>Select</option>
                                                        <option value ="2">Driver</option>
                                                        <option value ="3">User</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div id="vehicleValue" class="col-lg-4">
                                                <div class="form-group">
                                                    <label>Vehicle Type</label>
                                                    <select id="vehicle_type" name="vehicle_type" class="form-control">
                                                        <option>Select</option>
                                                        <option value ="1">Car</option>
                                                        <option value ="2">Bike</option>
                                                    </select>
                                                </div>
                                            </div>



                                        </div>
                                        <div id="driverValues">
                                        <div  class="row">
                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    <label>Driving License Number</label>
                                                    <input id="driving_licence_number" name="driving_licence_number" class="form-control">

                                                    </input>
                                                </div>
                                            </div>

                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    <label>Pan Card Number</label>
                                                    <input id="pan_card_number" name="pan_card_number" type="emailid" class="form-control">
                                                    </input>
                                                </div>
                                            </div>
                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    <label>Registration Certificate Number</label>
                                                    <input id="certificate_of_registration_number" name="certificate_of_registration_number" class="form-control">

                                                    </input>
                                                </div>
                                            </div>
                                        </div>
                                        <div  class="row">


                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    <label>Motor Insurence Number</label>
                                                    <input id="motor_insurence_number" name="motor_insurence_number" type="emailid" class="form-control">
                                                    </input>
                                                </div>
                                            </div>


                                            <div class="col-lg-4">
                                                <div class="form-group show_hide">
                                                    <label>Police Verification Number</label>
                                                    <input id="police_verification_number" name="police_verification_number" class="form-control">

                                                    </input>
                                                </div>
                                            </div>


                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label>Adhar Card Number</label>
                                                <input id="aadhar_card_number" name="aadhar_card_number" type="emailid" class="form-control">
                                                </input>
                                            </div>
                                        </div>

                                        </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-10">
                                            </div>
                                            <div class="col-lg-2">
                                                <button type="submit" class="btn btn-success btn-default btn-lg">
                                                    Save
                                                </button>
                                            </div>
                                            <script>document.getElementById("driverValues").style.display='none';
                                                document.getElementById("vehicleValue").style.display='none'
                                                </script>
                                        </div>

                                    </form>

                                </div>
                                <!-- /.row (nested) -->
                            </div>
                            <!-- /.col-lg-12 -->
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <%}else{%>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-8">

                                <h2>Permission Denied</h2>

                            </div>
                        </div>
                    </div>
                </div>
                <%}%>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>

    </div>

</div>
</div>
</body>