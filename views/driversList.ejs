<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">

<head>

    <script type="text/javascript" src="../public/javascripts/jquery-1.12.0.min.js"></script>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <script type="text/javascript" src="../public/javascripts/user.js"></script>

    <% include partials/head.ejs%>
    <style>
        .container {
            position: relative;
            width: 100%;
            max-width: 400px;
        }

        .container img {
            width: 100%;
            height: auto;
        }

        .container .btn {
            position: absolute;
            top: 80%;
            left: 80%;
            transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            color: white;
            padding: 8px 18px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            text-align: center;
            opacity: 0.7;
        }

        .container .btn:hover {
            background-color: #efad4f;
        }
    </style>
</head>
<body>

<div id="wrapper">
    <header>
        <%include ./partials/header.ejs%>
    </header>
    <div id="page-wrapper">
        <br/>
        <div class="row">
            <div class="col-lg-12">
                <br ><form action = "/property/userWiseProperty/date" method="post">
                    <!---->
                </form>

            </div>
        </div>
        <!-- InstanceBeginEditable name="ContentRegion" -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Employee List

                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="dataTable_wrapper">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                <tr>
                                    <th>Sr. no.</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>User Type</th>
                                    <th>Date</th>
                                    <th>Edit</th>
                                    <th>View Documents</th>


                                </tr>
                                </thead>
                                <tbody>
                                <%

                                for(var i=0; i < data.UserDetails.length; i++) {
                                if(i%2==0){%>
                                <tr class="even gradeC">
                                    <td><%= i+1 %></td>
                                    <td><%= data.UserDetails[i].name %></td>
                                    <td><%= data.UserDetails[i].emailid %></td>
                                    <td><%= data.UserDetails[i].user_type %></td>
                                    <td><%= data.UserDetails[i].created_on %></td>
                                    <td><button onclick="setEditEmployee(<%= data.UserDetails[i].userid %>)" class="btn btn-warning btn-circle" data-toggle="modal" data-target=".bs-example-modal-md"> <i class="fa fa-pencil"></i></button>
                                    <td><button onclick="setEmployeeDocuments(<%= data.UserDetails[i].userid %>)" class="btn btn-group-justified btn-circle" data-toggle="modal" data-target=".bs-example-modal-lg"> <i class="fa fa-eye"></i></button>



                                </tr>
                                <%}else{%>
                                <td><%= i+1 %></td>
                                <td><%= data.UserDetails[i].name %></td>
                                <td><%= data.UserDetails[i].emailid %></td>
                                <td><%= data.UserDetails[i].user_type %></td>
                                <td><%= data.UserDetails[i].created_on %></td>
                                <td><button onclick="setEditEmployee(<%= data.UserDetails[i].userid %>)"  class="btn btn-warning btn-circle" data-toggle="modal" data-target=".bs-example-modal-md"> <i class="fa fa-pencil"></i></button>
                                <td><button onclick="setEmployeeDocuments(<%= data.UserDetails[i].userid %>)" class="btn btn-justified btn-circle" data-toggle="modal" data-target=".bs-example-modal-lg"> <i class="fa fa-eye"></i></button>

                                    <% }
                                    }%>


                                </tbody>

                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div id="userEditModal" class="modal fade bs-example-modal-md" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-md">
                <div class="modal-content">

                    <div class="modal-header">
                        <button type="button" class="close btn btn-danger btn-circle" data-dismiss="modal">
                            <i class="fa fa-times"></i>
                        </button>
                        <h4 class="modal-title" id="myModalLabel">Edit Employee</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <form id="form2" role="form">
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label>User Id</label>
                                                        <input id="user_id" name="user_id"  readonly class="form-control">
                                                    </div>
                                                </div>




                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label>Name</label>
                                                        <input id="name" name="name" class="form-control">

                                                        </input>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label>Sex</label>
                                                        <select id="sex" name="sex" class="form-control">
                                                            <option>Select</option>
                                                            <option>Male</option>
                                                            <option>Female</option>
                                                        </select>
                                                    </div>
                                                </div>


                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label>Age</label>
                                                        <input id="age" name="age" class="form-control">
                                                        </input>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label>User Type</label>
                                                        <select id="user_type" name="user_type" class="form-control" onchange="setFieldsEdit()">
                                                            <option>Select</option>
                                                            <option value ="2">Driver</option>
                                                            <option value ="3">User</option>
                                                        </select>
                                                    </div>
                                                </div>

                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label>Mobile Number</label>
                                                        <input id="mobile_number" name="mobile_number" class="form-control" type="tel" maxlength="10">

                                                        </input>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label>Address</label>
                                                        <input id="city" name="city" class="form-control">

                                                        </input>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label>Email</label>
                                                        <input id="email" name="emailid" type="emailid" class="form-control">
                                                        </input>
                                                    </div>
                                                </div>
                                            </div>
                                            <div id = "driverValues">
                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label>Vehicle Type</label>
                                                            <select id="vehicle_type" name="vehicle_type" class="form-control">
                                                                <option>Select</option>
                                                                <option value ="1">Car</option>
                                                                <option value ="2">Bike</option>
                                                            </select>
                                                        </div>
                                                    </div>


                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label>Driving License Number</label>
                                                            <input id="driving_licence_number" name="driving_licence_number" class="form-control">

                                                            </input>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">

                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label>Pan Card Number</label>
                                                            <input id="pan_card_number" name="pan_card_number" type="emailid" class="form-control">
                                                            </input>
                                                        </div>
                                                    </div>

                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label>Registration Certificate Number</label>
                                                            <input id="certificate_of_registration_number" name="certificate_of_registration_number" class="form-control">

                                                            </input>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">

                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label>Motor Insurence Number</label>
                                                            <input id="motor_insurence_number" name="motor_insurence_number" type="emailid" class="form-control">
                                                            </input>
                                                        </div>
                                                    </div>

                                                    <div class="col-lg-6">
                                                        <div class="form-group show_hide">
                                                            <label>Police Verification Number</label>
                                                            <input id="police_verification_number" name="police_verification_number" class="form-control">

                                                            </input>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">


                                                    <div class="col-lg-6 show_hide">
                                                        <div class="form-group">
                                                            <label>Adhar Card Number</label>
                                                            <input id="aadhar_card_number" name="aadhar_card_number" type="emailid" class="form-control">
                                                            </input>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>



                                        </form>
                                    </div>
                                </div>
                                <!-- /.row (nested) -->
                            </div>
                            <!-- /.col-lg-12 -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="update" onclick="UpdateEmployee()" class="btn btn-success btn-default btn-lg">
                            Update
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div id="documentEditModal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">

                    <div class="modal-header">
                        <button type="button" class="close btn btn-danger btn-circle" data-dismiss="modal">
                            <i class="fa fa-times"></i>
                        </button>
                        <h4 class="modal-title" id="myModalLabel">View Documents</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div id="form2" role="form">
                                            <div class = "row">
                                                <div class = "col-sm-6 col-md-3">
                                                    <h4><b>Profile Pic</b></h4>
                                                    <div class="container">
                                                        <div class = "thumbnail">
                                                            <img id="profilePic" name="profilePic">
                                                        </div>
                                                    </div>

                                                    <div class = "caption">


                                                    </div>
                                                </div>
                                                <div id="driverDetails2">

                                                    <div class = "col-sm-6 col-md-3">
                                                        <h4><b>Driving License</b></h4>
                                                        <div class="container">
                                                            <div class = "thumbnail">
                                                                <img id="drivingLicense" name="drivingLicense">
                                                            </div>
                                                        </div>

                                                        <div class = "caption">


                                                        </div>
                                                    </div>
                                                    <div class = "col-sm-6 col-md-3">
                                                        <h4><b>Pan Card</b></h4>
                                                        <div class="container">
                                                            <div class = "thumbnail">
                                                                <img id="pancard" name="pancard">
                                                            </div>
                                                        </div>

                                                        <div class = "caption">


                                                        </div>
                                                    </div>
                                                    <div class = "col-sm-6 col-md-3">
                                                        <h4><b>Registration Certificate</b></h4>
                                                        <div class="container">
                                                            <div class = "thumbnail">
                                                                <img id="registrationCertificate" name="registrationCertificate">
                                                            </div>
                                                        </div>

                                                        <div class = "caption">


                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                            <div id="driverDetails">
                                                <div class = "row">

                                                    <div class = "col-sm-6 col-md-3">
                                                        <h4><b>Motor Insurence</b></h4>
                                                        <div class="container">
                                                            <div class = "thumbnail">
                                                                <img id="mototInsurence" name="mototInsurence">
                                                            </div>
                                                        </div>

                                                        <div class = "caption">


                                                        </div>
                                                    </div>
                                                    <div class = "col-sm-6 col-md-3">
                                                        <h4><b>Police Verification</b></h4>
                                                        <div class="container">
                                                            <div class = "thumbnail">
                                                                <img id="policeVerification" name="policeVerification">
                                                            </div>
                                                        </div>

                                                        <div class = "caption">


                                                        </div>
                                                    </div>
                                                    <div class = "col-sm-6 col-md-3">
                                                        <h4><b>Adhar Card</b></h4>
                                                        <div class="container">
                                                            <div class = "thumbnail">
                                                                <img id="adharCard" name="adharCard">
                                                            </div>
                                                        </div>

                                                        <div class = "caption">


                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            </form>
                                        </div>
                                    </div>
                                    <!-- /.row (nested) -->
                                </div>
                                <!-- /.col-lg-12 -->
                            </div>
                            <!-- /.row -->
                        </div>
                        <div class="modal-footer">
                            <!--<button type="button" id="update1" onclick="UpdateEmployee()" class="btn btn-success btn-default btn-lg">-->
                            <!--Update-->
                            <!--</button>-->
                        </div>
                        <script>document.getElementById("driverValues").style.display='none';
                            document.getElementById("driverDetails").style.display='none'
                            document.getElementById("driverDetails2").style.display='none'

                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>
</body>
