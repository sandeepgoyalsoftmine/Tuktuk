                                    <td><%= i+1 %></td>
                                    <td><%= data.UserDetails[i].name %></td>
                                    <td><%= data.UserDetails[i].emailid %></td>
                                    <td><%= data.UserDetails[i].mobile_no %></td>

                                    <td><%= data.UserDetails[i].vehicle_type %></td>

                                    <%
                                    if(data.UserDetails[i].status==='Deactivate'){%>
                                    <td><div class="led-red"></div></td>
                                    <%}else{%>
                                    <td><div class="led-green"></div></td>
                                    <%}%>
