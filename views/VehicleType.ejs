<!DOCTYPE html>
<html lang="en">

<head>
    <script type="text/javascript" src="../public/javascripts/jquery-1.12.0.min.js"></script>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <script type="text/javascript" src="../public/javascripts/vehicleType.js"></script>

    <% include partials/head.ejs%>
</head>
<body>
<div id="wrapper">

    <!-- Navigation -->
    <header>
        <%include ./partials/header.ejs%>
    </header>

    <!-- Page Content -->
    <div id="page-wrapper">
        <br/>
        <!-- InstanceBeginEditable name="ContentRegion" -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Vehicle Types
                        <button type="button" class="btn btn-success btn-circle" data-toggle="modal" data-target=".bs-example-modal-sm" >
                            <i class="fa fa-plus"></i>
                        </button>
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="dataTable_wrapper">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                <tr>
                                    <th>Sr. No.</th>
                                    <th>Vehicle Type</th>
                                    <th>Created On</th>
                                    <th>Edit</th>

                                </tr>
                                </thead>
                                <tbody>
                                <div class="lds-ripple"><div></div><div></div></div>
                                <% for(var i=0; i < data.VehicleTypes.length; i++) {
                                if(i%2==0){%>
                                <tr class="even gradeC">
                                    <td ><%= i+1 %></td>
                                    <td><%= data.VehicleTypes[i].vehicle_type %></td>
                                    <td><%= data.VehicleTypes[i].created_on %></td>
                                    <td><button onclick="setEditVehicleType(<%= data.VehicleTypes[i].vehicle_id %>)" class="btn btn-warning btn-circle" data-toggle="modal" data-target=".bs-example-modal-md"> <i class="fa fa-pencil"></i></button>
                                    <!--<td>-->
                                        <!--<button type="button" onclick="deleteVehicleType(<%= data.VehicleTypes[i].vehicle_id %>)"  class="btn btn-danger btn-circle">-->
                                            <!--<i class="fa fa-trash-o"></i>-->
                                        <!--</button>-->
                                    <!--</td>-->
                                </tr>
                                <%}else{%>
                                <tr class="odd gradeX">
                                    <td ><%= i+1 %></td>
                                    <td><%= data.VehicleTypes[i].vehicle_type %></td>
                                    <td><%= data.VehicleTypes[i].created_on %></td>
                                    <td><button onclick="setEditVehicleType(<%= data.VehicleTypes[i].vehicle_id %>)" class="btn btn-warning btn-circle" data-toggle="modal" data-target=".bs-example-modal-md"> <i class="fa fa-pencil"></i></button>
                                    <!--<td>-->
                                        <!--<button type="button" onclick="deleteVehicleType(<%= data.VehicleTypes[i].vehicle_id %>)"  class="btn btn-danger btn-circle">-->
                                            <!--<i class="fa fa-trash-o"></i>-->
                                        <!--</button>-->
                                    <!--</td>-->
                                </tr>

                                <% }
                                }%>


                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->

        <div id="boardModal" class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">

                    <div class="modal-header">
                        <button type="button" class="close btn btn-danger btn-circle" data-dismiss="modal">
                            <i class="fa fa-times"></i>
                        </button>
                        <h4 class="modal-title" id="myModalLabel">Vehicle Types</h4>
                    </div>

                    <div class="modal-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <form id="form1"  role="form">
                                            <div class="form-group">
                                                <label>Vehicle Type</label>
                                                <input id="vehicle_type" name="vehicle_type" class="form-control">
                                            </div>
                                            <button id="save" name ="save" type="submit" class="btn btn-success btn-default btn-lg">
                                                Save
                                            </button>

                                        </form>
                                    </div>
                                </div>
                                <!-- /.row (nested) -->
                            </div>
                            <!-- /.col-lg-12 -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <div class="modal-footer">

                    </div>

                </div>
            </div>
        </div>
        <div class="modal fade bs-example-modal-md" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-md">
                <div class="modal-content">

                    <div class="modal-header">
                        <button type="button" class="close btn btn-danger btn-circle" data-dismiss="modal">
                            <i class="fa fa-times"></i>
                        </button>
                        <h4 class="modal-title" id="myModalLabel">Edit Vehicle Types</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <form id="form2" role="form">
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label>Vehicle Type Id</label>
                                                        <input id="vehicle_type_id" name="vehicle_type_id"  readonly class="form-control">
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label>Vehicle Type</label>
                                                        <input id="vehicleType" name="vehicleType" class="form-control">
                                                    </div>
                                                </div>


                                            </div>
                                            <button type="button" id="update" name="update" onclick="UpdateVehicleType()" class="btn btn-success btn-default btn-lg">
                                                Update
                                            </button>

                                        </form>
                                    </div>
                                </div>
                                <!-- /.row (nested) -->
                            </div>
                            <!-- /.col-lg-12 -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <div class="modal-footer">

                    </div>
                </div>
            </div>
        </div>
        <!-- InstanceEndEditable -->
    </div>
    <!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->

<!-- jQuery -->


<script>
    $(document).ready(function() {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>
<!-- InstanceEndEditable -->
</body>