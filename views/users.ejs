<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">

<head>

    <script type="text/javascript" src="../public/javascripts/jquery-1.12.0.min.js"></script>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <script type="text/javascript" src="../public/javascripts/user.js"></script>

    <% include partials/head.ejs%>
</head>
<body>

<div id="wrapper">
    <header>
        <%include ./partials/header.ejs%>
    </header>
    <div id="page-wrapper">
        <br/>
        <div class="row">
            <div class="col-lg-12">
                <br ><form action = "/property/userWiseProperty/date" method="post">
                    <!---->
                </form>

            </div>
        </div>
        <!-- InstanceBeginEditable name="ContentRegion" -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Employee List

                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="dataTable_wrapper">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                <tr>
                                    <th>Sr. no.</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>User Type</th>
                                    <th>Date</th>
                                    <th>Edit</th>


                                </tr>
                                </thead>
                                <tbody>
                                <%

                                for(var i=0; i < data.UserDetails.length; i++) {
                                if(i%2==0){%>
                                <tr class="even gradeC">
                                    <td><%= i+1 %></td>
                                    <td><%= data.UserDetails[i].name %></td>
                                    <td><%= data.UserDetails[i].emailid %></td>
                                    <td><%= data.UserDetails[i].user_type %></td>
                                    <td><%= data.UserDetails[i].created_on %></td>
                                    <td><button onclick="setEditEmployee(<%= data.UserDetails[i].userid %>)" class="btn btn-warning btn-circle" data-toggle="modal" data-target=".bs-example-modal-md"> <i class="fa fa-pencil"></i></button>



                                </tr>
                                <%}else{%>
                                <td><%= i+1 %></td>
                                <td><%= data.UserDetails[i].name %></td>
                                <td><%= data.UserDetails[i].emailid %></td>
                                <td><%= data.UserDetails[i].user_type %></td>
                                <td><%= data.UserDetails[i].created_on %></td>
                                <td><button onclick="setEditEmployee(<%= data.UserDetails[i].userid %>)"  class="btn btn-warning btn-circle" data-toggle="modal" data-target=".bs-example-modal-md"> <i class="fa fa-pencil"></i></button>

                                <% }
                                }%>


                                </tbody>

                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div id="userEditModal" class="modal fade bs-example-modal-md" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-md">
                <div class="modal-content">

                    <div class="modal-header">
                        <button type="button" class="close btn btn-danger btn-circle" data-dismiss="modal">
                            <i class="fa fa-times"></i>
                        </button>
                        <h4 class="modal-title" id="myModalLabel">Edit Employee</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <form id="form2" role="form">
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label>User Id</label>
                                                        <input id="user_id" name="user_id"  readonly class="form-control">
                                                    </div>
                                                </div>




                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label>Name</label>
                                                        <input id="name" name="name" class="form-control">

                                                        </input>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label>Sex</label>
                                                        <select id="sex" name="sex" class="form-control">
                                                            <option>Select</option>
                                                            <option>Male</option>
                                                            <option>Female</option>
                                                        </select>
                                                    </div>
                                                </div>


                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label>Age</label>
                                                        <input id="age" name="age" class="form-control">
                                                        </input>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label>User Type</label>
                                                        <select id="user_type" name="user_type" class="form-control">
                                                            <option>Select</option>
                                                            <option value ="2">Driver</option>
                                                            <option value ="3">User</option>
                                                        </select>
                                                    </div>
                                                </div>

                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label>Mobile Number</label>
                                                        <input id="mobile_number" name="mobile_number" class="form-control" type="tel" maxlength="10">

                                                        </input>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label>Address</label>
                                                        <input id="city" name="city" class="form-control">

                                                        </input>
                                                    </div>
                                                </div>

                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label>Email</label>
                                                        <input id="email" name="emailid" type="emailid" class="form-control">
                                                        </input>
                                                    </div>
                                                </div>
                                            </div>



                                        </form>
                                    </div>
                                </div>
                                <!-- /.row (nested) -->
                            </div>
                            <!-- /.col-lg-12 -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="update" onclick="UpdateEmployee()" class="btn btn-success btn-default btn-lg">
                            Update
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<script>
    $(document).ready(function() {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>
</body>
